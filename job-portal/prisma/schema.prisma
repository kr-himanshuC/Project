generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  fullname String
  email    String  @unique
  number   BigInt
  password String
  profile  Profile
  company  Company
  jobs     Job[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
type Profile {
  bio        String
  skills     String[]
  resume     String
  profileImg String   @default("")
}


type Company {
  name     String
  logo     String
  desc     String
  website  String
}

model Job {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  desc       String
  role       String
  salary     BigInt
  location   String
  experience BigInt
  User       User?   @relation(fields: [userId], references: [id])
  userId     String? @db.ObjectId //admin id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
